<!-- contact form starts here -->
<section>

	<div class="contact-form-1 col-md-8 col-sm-8">
		<div id="c-heading">
			<h4>Contact Form</h4></div>

			{{#if hasErrors}}
			<div class="alert alert-danger">
				{{#each messages}}
				<p>{{this}}</p>
				{{/each}}
			</div>
			{{/if}}
		<form action="/user/contact" class="form-area-1" method="post">


			<div class="form-group">
				<label for="Email">Email*:</label>
				<input type="text" id="email" class="form-control" name="email" placeholder="Email Address">
			</div>
			<div class="form-group">
				<label for="full-name">Subject*:</label>
				<input type="text" id="subject" name="subject" class="form-control" placeholder="please enter your Subject">
			</div>

			<div class="form-group">
				<label for="full-name">Message*:</label>
				<textarea type= "text" id="message" name = "message" cols="30" rows="10" class="form-control" placeholder="Your message should be here..."></textarea>
			</div>
			<input type="hidden" name="_csrf" value="{{ csrfToken }}">
			<button type="submit" class="btn btn-primary form-control btn-user">Submit</button>
		</form>
	</div>
</section>
