<section>

	<div class="contact-form col-md-8 col-sm-8">
		<div id="c-heading">
			<h4>Enter credentials</h4></div>
			{{#if hasErrors}}
			<div class="alert alert-danger">
				{{#each messages}}
				<p>{{this}}</p>
				{{/each}}
			</div>
			{{/if}}
		<form action="/user/signup" class="form-area" method="post">
			<!-- <div class="form-group">
				<label for="full-name">Username*:</label>
				<input type="text" id="full-name" class="form-control" placeholder="Full Name">
			</div> -->
			<div class="form-group">
				<label for="Email">Email*:</label>
				<input type="text" id="email" class="form-control" name="email" placeholder="Email Address">
			</div>
			<div class="form-group">
				<label for="full-name">Password*:</label>
				<input type="password" id="password" name="password" class="form-control" placeholder="please enter your password">
			</div>
			<!-- <div class="form-group">
				<label for="full-name">Re-Enter Password*</label>
				<input type="password" id="password" class="form-control" placeholder="please re-enter the password for confirmation">
			</div> -->
			<input type="hidden" name="_csrf" value="{{ csrfToken }}">
			<button type="submit" class="btn btn-primary form-control">Sign Up</button>
		</form>

	</div>
</section>
